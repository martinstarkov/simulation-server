{
  "version": "0.2.0",
  "configurations": [
    // ============================================================
    // Windows: MSVC (cppvsdbg)
    // ============================================================
    {
      "name": "Windows: Visualizer (non-blocking)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "cargo.exe",
      "args": [
        "run", "-p", "sim-remote-client", "--",
        "--addr", "127.0.0.1:60000", "--n-states", "1000",
        "--app-id", "visualizer-1"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopAtEntry": false
    },
    {
      "name": "Windows: Visualizer (blocking)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "cargo.exe",
      "args": [
        "run", "-p", "sim-remote-client", "--",
        "--addr", "127.0.0.1:60000", "--n-states", "1000",
